@model Authors
<div class="container">


    <div class="row justify-content-center">


        <div class="col-md-8">
            <h1> Sliders Create</h1>

        </div>
        <div class="col-md-8">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FullName">FullName</label>
                    <input asp-for="FullName" class="form-control">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
             

                <div class="form-group">
                    <label asp-for="ImageFile">Description</label>
                    <input type="file" asp-for="ImageFile" class="form-control"></input>
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>


        </div>


    </div>



</div>



</div>

