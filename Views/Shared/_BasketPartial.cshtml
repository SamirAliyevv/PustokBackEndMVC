@model BasketViewmodel

<div class="cart-total">
    <span class="text-number">
        @Model.Items.Count
    </span>
    <span class="text-item">
        Shopping Cart
    </span>
    <span class="price">
        ₼@Model.TotalAmount.ToString("0.00")
        <i class="fas fa-chevron-down"></i>
    </span>
</div>
<div class="cart-dropdown-block">
   @foreach (var item in Model.Items)
    {
        <div class=" single-cart-block ">
            <div class="cart-product">
                <a href="product-details.html" class="image">
                    <img src="~/image/products/@item.Book.BooksImages.FirstOrDefault(x=>x.PosterImage==true).ImageUrl" alt="">
                </a>
                <div class="content">
                    <h3 class="title">
                        <a href="product-details.html">
                         @item.Book.Name
                        </a>
                    </h3>
                    <p class="price"><span class="qty">@item.Count</span> @((item.Book.Percent>0?(item.Book.Price*(100-item.Book.Percent)/100):item.Book.Price).ToString("0.00"))</p>
                    <a asp-action="RemoveBasket" asp-controller="book"  asp-route-id="@item.Book.Id"  class="cross-btn x-btn"><i class="fas fa-times"></i></a>
                </div>
            </div>
        </div>
        
        
        
        
    }
    <div class=" single-cart-block ">
        <div class="btn-block">
            <a href="cart.html" class="btn">
                View Cart <i class="fas fa-chevron-right"></i>
            </a>
            <a href="checkout.html" class="btn btn--primary">
                Check Out <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </div>
</div>